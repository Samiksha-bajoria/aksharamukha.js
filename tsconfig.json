{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}